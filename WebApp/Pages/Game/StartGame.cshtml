@page
@model WebApp.Pages.Game.StartGame

@{
    ViewData["Title"] = "Start game";
}

<form method="post">
<div class="row justify-content-lg-center">
    <div class="col-lg-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameConfigId" class="control-label"></label>
                <select asp-for="GameConfigId" class ="form-control" asp-items="ViewBag.GameConfigId"></select>
            </div>
    </div>
</div>

<div class="row justify-content-md-center">
    <div class="col-md-8">
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <label class="btn btn-secondary active">
                <input asp-for="ShipPlacementType" type="radio" value="@ShipPlacementType.Manual" checked> Ship
            </label>
            <label class="btn btn-secondary">
                <input asp-for="ShipPlacementType" type="radio" value="@ShipPlacementType.Random"> Radio
            </label>
        </div>
    </div>
</div>

<div class="row justify-content-md-center">
    <div class="col-md-8">
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</div>
</form>